<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BitmapImage x:Key="ExitButtonNormal" UriSource="/OnlineCourse;component/Resource/btn_del_search_normal_gray.png" />
    <BitmapImage x:Key="ExitButtonOver" UriSource="/OnlineCourse;component/Resource/btn_wnd_white_close_hovered.png" />
    <Style x:Key="ExitButton" TargetType="Image">
        <Setter Property="Source"  Value="{StaticResource ExitButtonNormal}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Source" Value="{StaticResource ExitButtonOver}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <GeometryGroup x:Key="ClipGeometry" FillRule="Nonzero">
        <EllipseGeometry RadiusX="12" RadiusY="12" Center="12, 12"></EllipseGeometry>
    </GeometryGroup>
    
</ResourceDictionary>